  "bugs": {
    "url": "https://github.com/mouten57/shop-n-share/issues"
  },
  "homepage": "https://github.com/mouten57/shop-n-share#readme",
  "devDependencies": {
    "faker": "^5.0.0",
    "jasmine": "^3.6.1",
    "request": "^2.88.2",
    "ws": "7.4.6"
  },
  "dependencies": {
    "axios": "^0.20.0",
    "body-parser": "^1.19.0",
    "concurrently": "^5.3.0",
    "cookie-session": "^2.0.0-beta.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-flash": "0.0.2",
    "express-validator": "^6.6.1",
    "http": "0.0.0",
    "mongoose": "^5.10.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.4",
    "passport": "^0.4.1",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
